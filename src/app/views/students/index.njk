{% extends "layout.njk" %}

{% block content %}
    <div class="cards table-container">
        <div class="header">
            <a class="button" href="/students/create">Novo</a>
            <form action="/students" method="GET">
                <input
                    type="text"
                    name="filter"
                    placeholder="Nome ou Email"
                    value={{ filter }}
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>E-Mail</th>
                    <th>Ação</th>
                </tr>
            </thead>

            {% for student in students %}
                <tbody>
                    <tr>
                        <td>
                            <span s
                                style="background-image: url({{ student.avatar_url }})">
                            </span>
                            {{ student.name }}
                        </td>
                        <td>{{ student.email }}</td>
                        <td><a href="/students/{{ student.id }}">Ver</a></td>
                    </tr>
                </tbody>
            {% endfor %}      
        </table>

        <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-filter={{filter}}>
            <div class="first"><<</div>
            <div class="preview"><</div>
            <div class="number">
                <div>1</div>
            </div>
            <div class="next">></div>
            <div class="last">>></div>
        </div>

    </div>
{% endblock content %}