{% extends "layout.njk" %}

{% block content %}
    <div class="cards table-container">
        <div class="header">
            <a class="button" href="/teachers/create">Novo</a>
            <form action="/teachers" method="GET">
                <input
                    type="text"
                    name="filter"
                    placeholder="Nome ou Disciplina"
                    value={{ filter }}
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Disciplinas</th>
                    <th>Total Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>

            {% for teacher in teachers %}
                <tbody>
                    <tr>
                        <td>
                            <span 
                                style="background-image: url({{ teacher.avatar_url }})">
                            </span>
                            {{ teacher.name }}
                        </td>
                        <td>{{ teacher.services }}</td>
                        <td>{{ teacher.total_students }}</td>
                        <td><a href="/teachers/{{ teacher.id }}">Ver</a></td>
                    </tr>
                </tbody>
            {% endfor %}      
        </table>
    </div>
{% endblock content %}