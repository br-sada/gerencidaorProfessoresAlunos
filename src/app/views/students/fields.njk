<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ student.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Nome Completo</div>
    <div>
        <input type="text" name="name" value="{{ student.name }}">
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" value="{{ student.email }}">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ student.birth }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
            <option 
                value="Medio" 
                {% if student.education_level == "Medio" %}
                    selected
                {% endif %}
                >Ensino Médio Completo
            </option>

            <option
                value="Superior"
                {% if student.education_level == "Superior" %}
                    selected
                {% endif %}
                >Ensino Superior Completo
            </option>

            <option 
                value="Mestrado"
                {% if student.education_level == "Mestrado" %}
                    selected
                {% endif %}
                >Mestrado
            </option>

            <option
                value="Doutorado"
                {% if student.education_level == "Doutorado" %}
                    selected
                {% endif %}
                >Doutorado
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <select name="teacher">
            {% for teacher in teacherOption %}
                <option 
                    value="{{ teacher.id }}" 
                    {% if student.teacher_id == teacher.id %}
                        selected
                    {% endif %}
                    >{{ teacher.name }}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="P" 
                {% if student.class_type == "P" %}
                    checked
                {% endif %}
                >Presencial
        </span>

        <span>
            <input
                type="radio" 
                name="class_type" 
                value="D"
                {% if student.class_type == "D" %}
                    checked
                {% endif %}
                >À distancia
        </span>
    </div>
</div>

<button type="submit">Salvar</button>